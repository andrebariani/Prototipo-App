    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParametrosActivity">

    <EditText android:hint="Parametro 1"
        android:id="@+id/parametro_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:hint="Parametro 2"
        android:id="@+id/parametro_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:hint="Parametro 3"
        android:id="@+id/parametro_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>